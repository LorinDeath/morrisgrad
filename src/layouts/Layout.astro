<!-- Глобальный Лайтбокс -->
<div id="lightbox" class="lightbox">
    <span class="close-btn">&times;</span>
    <button id="prev-btn" class="lightbox-nav prev-btn">&#10094;</button>
    <img class="lightbox-content" id="lightbox-img" alt="Просмотр">
    <button id="next-btn" class="lightbox-nav next-btn">&#10095;</button>
</div>

<script>
    // Логика кнопки "Назад"
    document.addEventListener('astro:page-load', () => {
        const backBtn = document.getElementById('back-btn');
        if (backBtn) {
            // Если мы на главной, скрываем кнопку "Назад"
            if (window.location.pathname === '/' || window.location.pathname === '/index.html') {
                backBtn.style.display = 'none';
            } else {
                backBtn.style.display = 'flex';
            }
            
            backBtn.onclick = () => window.history.back();
        }

        // Логика Лайтбокса (Всплывающего окна)
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        const closeBtn = document.querySelector('.close-btn');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        
        // Ищем все картинки внутри блоков .gallery-item на любой странице
        const galleryImages = Array.from(document.querySelectorAll('.gallery-item img'));
        let currentIndex = 0;

     // Добавляем : number для параметра index
const showImage = (index: number) => {
    if (index < 0) index = galleryImages.length - 1;
    if (index >= galleryImages.length) index = 0;
    
    currentIndex = index;
    
    // Вместо @ts-ignore лучше использовать приведение типа для безопасности
    if (lightboxImg) {
        (lightboxImg as HTMLImageElement).src = (galleryImages[currentIndex] as HTMLImageElement).src;
    }
};

        if (lightbox && lightboxImg && closeBtn && prevBtn && nextBtn) {
            // Открытие
            galleryImages.forEach((img, index) => {
                if (img instanceof HTMLElement) {
                    img.style.cursor = 'zoom-in';
                }
                img.addEventListener('click', (e) => {
                    lightbox.classList.add('active');
                    currentIndex = index;
                    // @ts-ignore
                    lightboxImg.src = e.target.src;
                });
            });

            // Закрытие по крестику
            closeBtn.addEventListener('click', () => {
                lightbox.classList.remove('active');
            });

            // Закрытие по клику на фон
            lightbox.addEventListener('click', (e) => {
                if (e.target === lightbox) lightbox.classList.remove('active');
            });

            // Навигация
            prevBtn.addEventListener('click', (e) => { e.stopPropagation(); showImage(currentIndex - 1); });
            nextBtn.addEventListener('click', (e) => { e.stopPropagation(); showImage(currentIndex + 1); });

            // Клавиатура
            document.addEventListener('keydown', (e) => {
                if (lightbox.classList.contains('active')) {
                    if (e.key === 'ArrowLeft') showImage(currentIndex - 1);
                    if (e.key === 'ArrowRight') showImage(currentIndex + 1);
                    if (e.key === 'Escape') lightbox.classList.remove('active');
                }
            });
        }
    });
</script>
    </body>
</html>

