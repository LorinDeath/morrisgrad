---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Мир Завоевателей — проект Алекса Сэйлора" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Exo+2:wght@300;600&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* Твоя фирменная палитра Альказака */
		--bg-dark: #0a0a0a;
		--bg-purple: #1a0b2e;
		--accent-gold: #ffd700;
		--energy-purple: #a020f0;
		--btn-gray: #333333;
		--text-light: #e0e0e0;
	}

	html {
		font-family: 'Exo 2', sans-serif;
		background: var(--bg-dark);
	}

	body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    
    /* Добавляем фоновое изображение */
    background-image: 
      /* Слой затемнения (градиент от черного к прозрачному фиолетовому) */
      linear-gradient(rgba(0, 0, 0, 0.8), rgba(26, 11, 46, 0.7)), 
      /* Ссылка на твое изображение */
      url('/images/main-bg.webp');
    
    /* Настройки отображения */
    background-size: cover; /* Растягивает фото на весь экран */
    background-position: center; /* Центрирует картинку */
    background-attachment: fixed; /* Картинка не движется при скролле (эффект параллакса) */
    background-repeat: no-repeat;
    
    color: var(--text-light);
  }
	h1, h2, .site-name {
		font-family: 'Cinzel', serif; /* Более фэнтезийный шрифт для заголовков */
	}

	/* Убираем стандартные отступы у кнопок и ссылок */
	button, a {
		cursor: pointer;
		font-family: inherit;
	}

	/* Скроллбар в стиле темной магии */
	::-webkit-scrollbar {
		width: 8px;
	}
	::-webkit-scrollbar-track {
		background: var(--bg-dark);
	}
	::-webkit-scrollbar-thumb {
		background: var(--btn-gray);
		border-radius: 10px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: var(--energy-purple);
	}
</style>