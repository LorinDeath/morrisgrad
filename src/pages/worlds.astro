---
import Layout from '../layouts/Layout.astro';

const worlds = [
  { name: "МоррисГрад", desc: "Центральный мир перекрестка.", color: "#4f46e5" },
  { name: "Пустоши", desc: "Мир, где магия иссякла.", color: "#b91c1c" },
  { name: "Технополис", desc: "Мир победившего киберпанка.", color: "#059669" },
];
---

<Layout title="Миры | MorrisGrad">
  <div class="container">
    <h1>Мультивселенная</h1>
    <p class="intro">Исследуйте измерения, связанные с нашим городом.</p>

    <div class="worlds-container">
      {worlds.map(world => (
        <div class="world-card" style={`--accent-color: ${world.color}`}>
          <div class="world-bg"></div>
          <div class="world-content">
            <h2>{world.name}</h2>
            <p>{world.desc}</p>
            <button class="explore-btn">Исследовать</button>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .container { max-width: 1200px; margin: 0 auto; padding: 2rem 1rem; text-align: center; }
  h1 { font-size: 3rem; margin-bottom: 0.5rem; color: #fff; }
  .intro { color: #aaa; margin-bottom: 3rem; font-size: 1.2rem; }

  .worlds-container { display: flex; flex-wrap: wrap; justify-content: center; gap: 2rem; }

  .world-card { position: relative; width: 300px; height: 400px; border-radius: 20px; overflow: hidden; background: #222; transition: transform 0.3s, box-shadow 0.3s; cursor: pointer; }
  .world-card:hover { transform: scale(1.02); box-shadow: 0 0 20px var(--accent-color); }

  .world-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(to bottom, transparent, #000); z-index: 1; }
  
  .world-content { position: absolute; bottom: 0; left: 0; width: 100%; padding: 2rem; z-index: 2; text-align: left; }
  
  .world-content h2 { color: #fff; font-size: 2rem; margin: 0 0 0.5rem 0; text-shadow: 0 2px 4px rgba(0,0,0,0.5); }
  .world-content p { color: #ddd; margin-bottom: 1.5rem; font-size: 0.9rem; }
  
  .explore-btn { background: var(--accent-color); color: white; border: none; padding: 0.5rem 1.5rem; border-radius: 20px; font-weight: bold; cursor: pointer; transition: opacity 0.2s; }
  .explore-btn:hover { opacity: 0.9; }
</style>